{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**"], "env": ["NEXT_PUBLIC_API_URL", "API_BASE_URL", "DATABASE_URL", "API_PORT", "API_HOST"] },
    "dev": { "persistent": true, "cache": false },
    "start": { "dependsOn": ["build"], "persistent": true },
    "migrate": { "cache": false },
    "test": { "dependsOn": ["^build"] }
  }
}
